---

// strikes that have coordinates

import BaseLayout from "../../layouts/BaseLayout.astro";
import { getAllStrikes, formatDate } from "../../data/strikes.js";

const allStrikes = await getAllStrikes();
const base = import.meta.env.BASE_URL;

// filter to only ones with lat/lon
let strikesWithCoords = []
for (let i = 0; i < allStrikes.length; i++) {
    let s = allStrikes[i]
  if (s.lat && s.lon) {
      strikesWithCoords.push(s)
  }
}

// sort newest first
strikesWithCoords.sort(function(a, b) {
    return b.date - a.date
})

const totalStrikes = allStrikes.length
const mappedStrikes = strikesWithCoords.length
---

<BaseLayout title="Map Data">
    <h2>Strikes with Map Data</h2>
  <p>
      <strong>{mappedStrikes}</strong> of {totalStrikes} strikes have geographic coordinates 
    and can be viewed on a map. Click any strike to see its location.
    </p>

  <div class="strikes-grid">
      {strikesWithCoords.map((strike) => (
      <a href={`${base}strikes/${strike.slug}/`} class="strike-card">
          <div class="strike-number">#{strike.number}</div>
        <div class="strike-location">{strike.location || strike.town || "Unknown"}</div>
          <div class="strike-country">{strike.country}</div>
        <div class="strike-date">{formatDate(strike.date)}</div>
          <div class="strike-deaths">{strike.deaths || "?"} deaths</div>
        <div class="view-map">View Map →</div>
          </a>
    ))}
    </div>

  <a href={base} class="back-link">← Back to Home</a>
</BaseLayout>

<style>
    .strikes-grid {
    display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
      margin-top: 2rem;
  }

    .strike-card {
    background: linear-gradient(145deg, #132238 0%, #0d1c30 100%);
      border: 1px solid #1e3a5f;
    border-radius: 10px;
      padding: 1.25rem;
    text-decoration: none;
      color: #e2e8f0;
    transition: transform 0.2s ease, border-color 0.2s ease, box-shadow 0.2s ease;
      display: flex;
    flex-direction: column;
      gap: 0.5rem;
  }
    .strike-card:hover {
    transform: translateY(-3px);
      border-color: #f59e0b;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
      text-decoration: none;
  }

    .strike-number {
    font-size: 0.8rem;
      color: #64748b;
    font-weight: 600;
    }
  .strike-location {
      font-size: 1.1rem;
    font-weight: 600;
      color: #fbbf24;
    line-height: 1.3;
    }
  .strike-country {
      font-size: 0.9rem;
    color: #94a3b8;
    }
  .strike-date {
      font-size: 0.85rem;
    color: #64748b;
    }
  .strike-deaths {
      font-size: 0.9rem;
    color: #f59e0b;
      font-weight: 500;
  }

    .view-map {
    margin-top: auto;
      padding-top: 0.75rem;
    font-size: 0.85rem;
      color: #f59e0b;
    font-weight: 600;
      border-top: 1px solid #1e3a5f;
  }
    .strike-card:hover .view-map {
    color: #fbbf24;
    }

  @media (max-width: 600px) {
      .strikes-grid {
      grid-template-columns: 1fr;
      }
  }
</style>
